        margin-left: auto;
        margin-right: auto;
        width: 700px;
    }
    input, #bay, #tam{
        border: 1px solid gray;
        border-radius: 5px;
    }
    #sau, #bay, #tam{
        padding-top: 5px;
        padding-left: 5px;
    }
    #mot, #hai, #ba, #bon, #nam, #sau, #bay, #tam {
        width: 270px;
        height: 35px;
