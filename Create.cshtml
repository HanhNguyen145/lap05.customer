<style type="text/css">
    #id_cat {
        border: 1px solid lightgreen;
        border-radius: 10px;
        background-color: lightgreen;
        padding-top: 10px;
        padding-bottom: 10px;
        color: darkgreen;
        width: 700px;
        margin-left: auto;
        margin-right: auto;
    }

